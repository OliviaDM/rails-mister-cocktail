<%= simple_form_for([@cocktail, @review]) do |f| %>
  <% if @review.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= f.label :content %> <br>
<%= f.text_field :content %> <br>

<%= f.label :rating %> <br>
<%= f.number_field :rating %> <br>

<%= f.submit %>

<% end %>
