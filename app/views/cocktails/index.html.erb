<div>
  <h1>Cocktails</h1>

  <div class="grid">
    <% @cocktails.each do |cocktail| %>
      <div class="card" style=<%= "background-image:url(#{cocktail.image_url})" %>>
        <%= link_to cocktail.name, cocktail_path(cocktail.id) %>
      </div>
    <% end %>
  </div>

  <%= link_to "Add cocktail", new_cocktail_path %>
</div>
